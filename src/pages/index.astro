---
import Layout from '~/layouts/Layout.astro';
---

<Layout title="MoosicBox">
    <div class="header-container">
        <div class="header-content">
            <div class="header-text-container">
                <h1 class="header-text">Listen to your HiFi music anywhere</h1>
            </div>
            <div class="header-pictures">
                <img
                    class="header-picture-img-desktop"
                    src="/img/showcase-1.webp"
                    srcset="/img/showcase-1x240.webp 240w, /img/showcase-1x540.webp 540w, /img/showcase-1.webp 1080w"
                    sizes="70vw"
                    alt="MoosicBox showcase desktop"
                />
                <img
                    class="header-picture-img-android"
                    src="/img/showcase-2.webp"
                    srcset="/img/showcase-2x240.webp 240w, /img/showcase-2x540.webp 540w, /img/showcase-2.webp 1080w"
                    sizes="30vw"
                    alt="MoosicBox showcase android"
                />
            </div>
        </div>
    </div>
</Layout>

<style>
    .header-container {
        display: flex;
        height: calc(min(100%, 1000px));
        justify-content: center;
        padding: 0 50px;
    }

    .header-content {
        display: flex;
        height: calc(max(min(100%, 1000px), 30%));
        align-items: center;
        align-self: center;
        justify-content: center;
        gap: calc(min(100px, 5%));
    }

    .header-text-container {
        display: flex;
        flex-direction: column;
        flex: 2;
        text-align: right;
        min-width: 400px;
    }

    .header-text {
        align-self: flex-end;
        font-size: 50px;
    }

    .header-pictures {
        position: relative;
        display: flex;
        flex-direction: column;
        flex: 3;
        height: 100%;
    }

    .header-picture-img-desktop {
        object-fit: contain;
        margin-left: calc(10% - calc(100% / 30));
        height: 100%;
        max-height: 100%;
        max-width: calc(100% - calc(10% - calc(100% / 30)));
        align-self: flex-start;
    }

    .header-picture-img-android {
        position: absolute;
        bottom: 50%;
        transform: translateY(50%);
        object-fit: contain;
        height: calc(min(65%, 25dvw));
        max-height: 80%;
        align-self: flex-start;
    }

    @media (max-width: 1100px) {
        .header-container {
            height: calc(max(min(75%, 1000px), 30%));
        }

        .header-text-container {
            min-width: unset;
            text-align: center;
        }

        .header-text {
            align-self: center;
        }

        .header-content {
            flex-direction: column;
            height: auto;
        }

        .header-pictures {
            width: 100%;
        }

        .header-picture-img-android {
            height: 65%;
        }
    }
</style>
